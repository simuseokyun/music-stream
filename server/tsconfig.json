{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "./types"],
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src", "types"],
    "exclude": ["node_modules"]
}
